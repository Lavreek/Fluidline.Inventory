{% extends 'base.html.twig' %}

{% block title %}Вход в личный кабинет{% endblock %}

{% block body %}
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <div class="fl_container h-100">
        <div class="d-flex flex-column justify-content-around align-items-center h-100">
            {{ form_start(login_form) }}
            <div class="d-flex justify-content-center mb-5">
                <a class="logo-block" href="https://www.fluid-line.ru/">
                    <img class="logo-image" src="{{ asset('assets/images/logo-blue.svg') }}" alt="LOGO">
                </a>
            </div>
            {{ flipFormRow(form_row(login_form.username))|raw }}
            {{ flipFormRow(form_row(login_form.password))|raw }}
            {{ form_end(login_form) }}
        </div>
    </div>

{% endblock %}
