{% extends 'auth/account/index.html.twig' %}

{% block title %}Загруженные серии{% endblock %}

{% block content %}
    <div class="_serial-list">
        {% for i in serials %}
            <div class="_link-group">
                <a class="text-decoration-none _link text-black" href="./serial/{{ i.serial }}">{{ i.type }} | {{ i.serial }}</a>
                <a class="text-decoration-none _link text-danger" href="{{ path('delete_type_serial', {'type' : i.type, 'serial' : i.serial}) }}">Удалить</a>
            </div>
        {% endfor %}
    </div>
{% endblock %}
